<?xml version="1.0" encoding="UTF-8"?>
<ruleset xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         name="Login Automation Test Ruleset"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <description>
        PMD Ruleset for ensuring code quality in Selenium-based test automation.
    </description>

    <!-- Error-prone coding practices -->
    <rule ref="category/java/errorprone.xml/EmptyCatchBlock"/>
    <rule ref="category/java/errorprone.xml/UnusedLocalVariable"/>
    <rule ref="category/java/errorprone.xml/NullAssignment"/>
    <rule ref="category/java/errorprone.xml/NullDereference"/>

    <!-- Best practices -->
    <rule ref="category/java/bestpractices.xml/AccessorClassGeneration"/>
    <rule ref="category/java/bestpractices.xml/AvoidReassigningCatchVariables"/>
    <rule ref="category/java/bestpractices.xml/UseStaticImports"/>

    <!-- Code style -->
    <rule ref="category/java/codestyle.xml/ClassNamingConventions"/>
    <rule ref="category/java/codestyle.xml/FieldNamingConventions"/>
    <rule ref="category/java/codestyle.xml/FormalParameterNamingConventions"/>
    <rule ref="category/java/codestyle.xml/MethodNamingConventions"/>
    <rule ref="category/java/codestyle.xml/PackageNamingConventions"/>

    <!-- Performance -->
    <rule ref="category/java/performance.xml/AvoidInstantiatingObjectsInLoops"/>
    <rule ref="category/java/performance.xml/MinimizeArrayCopies"/>

    <!-- Multithreading -->
    <rule ref="category/java/multithreading.xml/AvoidThreadGroup"/>

    <!-- Security -->
    <rule ref="category/java/security.xml/AvoidEscapedCharactersInString"/>
    <rule ref="category/java/security.xml/SQLInjection"/>
    <rule ref="category/java/security.xml/HardCodedPassword"/>

    <!-- Duplicates -->
    <!-- Remove problematic rules -->

    <!-- Miscellaneous -->
    <rule ref="category/java/misc.xml/FinalClass"/>
    <rule ref="category/java/misc.xml/FinalMethod"/>
</ruleset>
