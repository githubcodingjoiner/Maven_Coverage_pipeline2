<?xml version="1.0" encoding="UTF-8"?>
<ruleset xmlns="http://pmd.sourceforge.net/ruleset/1.0.0"
         name="Example Ruleset"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/1.0.0 http://pmd.sourceforge.net/ruleset_1_0_0.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sourceforge.net/ruleset_1_0_0.xsd">
    <description>
        PMD Ruleset for detecting code quality issues in the project
    </description>

    <!-- Rule for avoiding empty catch blocks -->
    <rule ref="category/java/errorprone.xml/EmptyCatchBlock"/>
    
    <!-- Updated rule for detecting unused imports (valid PMD rule) -->
    <rule ref="category/java/bestpractices.xml/UnusedImports"/>
    
    <!-- Rule for detecting duplicated code -->
    <rule ref="category/java/cpd.xml/DuplicatedCode"/>
    
    <!-- Rule to ensure proper usage of constants instead of magic values -->
    <rule ref="category/java/design.xml/AvoidUsingHardCodedIP"/>
</ruleset>
