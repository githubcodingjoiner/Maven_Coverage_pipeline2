<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">
        <!-- Enforce method naming convention -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <!-- Enforce class naming convention -->
        <module name="ClassName"/>
        <!-- Ensure that each class has a javadoc comment -->
        <module name="JavadocType"/>
        <!-- Check for file tab characters -->
        <module name="FileTabCharacter"/>
        <!-- Enforce line length limit (100 characters) -->
        <module name="LineLength">
            <property name="max" value="100"/>
            <property name="ignorePattern" value="^package|^import"/>
        </module>
        <!-- Ensure that methods are not too large -->
        <module name="MethodLength">
            <property name="max" value="50"/>
        </module>
        <!-- Ensure proper indentation -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="lineWrappingIndentation" value="4"/>
        </module>
        <!-- Avoid usage of magic numbers -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="0,1"/>
        </module>
        <!-- Ensure proper javadoc for methods -->
        <module name="JavadocMethod"/>
    </module>
</module>
